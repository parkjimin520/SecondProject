<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">

    <github.hongbeomi.dividerseekbar.DividerSeekBar
        android:id="@+id/dividerSeekBar_test"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:max="100"
        app:dividerActiveMode="target"
        app:dividerTextLocationMode="top"
        app:dividerTextInterval="10"
        app:dividerSeaLineStrokeWidth="@dimen/dp_1"
        app:dividerSeaLineColor="@color/gray_400"
        app:dividerTextColor="@color/gray_600"
        app:dividerStrokeWidth="@dimen/dp_1"
        app:dividerColor="@color/light_blue_600"
        app:dividerTextSize="@dimen/sp_12"
        app:dividerActivatedTargetValue="5"
        app:dividerThumbActivatedDrawable="@color/thumb_default_enabled_color"
        app:dividerThumbDefaultDrawable="@color/thumb_default_disabled_color">
    </github.hongbeomi.dividerseekbar.DividerSeekBar>

    <RadioGroup
        android:id="@+id/Study_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <RadioButton
            android:id="@+id/Tutorial"
            android:text="Tutorial"
            android:textSize="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <RadioButton
            android:id="@+id/User_Study"
            android:text="User_Study"
            android:textSize="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RadioGroup>

    <TextView
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PID"
        android:textSize="12dp" />
    <RadioGroup
        android:id="@+id/PID_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <RadioButton
            android:id="@+id/P1"
            android:text="1"
            android:textSize="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <RadioButton
            android:id="@+id/P2"
            android:text="2"
            android:textSize="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <RadioButton
            android:id="@+id/P3"
            android:text="3"
            android:textSize="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <RadioButton
            android:id="@+id/P4"
            android:text="4"
            android:textSize="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <RadioButton
            android:id="@+id/P5"
            android:text="5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <RadioButton
            android:id="@+id/P6"
            android:text="6"
            android:textSize="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <RadioButton
            android:id="@+id/P7"
            android:text="7"
            android:textSize="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <RadioButton
            android:id="@+id/P8"
            android:text="8"
            android:textSize="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RadioGroup>


    <TextView
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Task"
        android:textSize="12dp" />
    <RadioGroup
        android:id="@+id/Task_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <RadioButton
            android:id="@+id/Task1"
            android:text="Task1"
            android:textSize="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <RadioButton
            android:id="@+id/Task2"
            android:text="Task2"
            android:textSize="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RadioGroup>


    <TextView
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Condition"
        android:textSize="12dp" />
    <RadioGroup
        android:id="@+id/Condition2_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <RadioButton
            android:id="@+id/ImgKey"
            android:text="Img+Summary"
            android:textSize="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <RadioButton
            android:id="@+id/Img"
            android:text="Img"
            android:textSize="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <RadioButton
            android:id="@+id/Key"
            android:text="Summary"
            android:textSize="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RadioGroup>

    <Button
        android:id="@+id/button"
        android:text="확인"
        android:textSize="12dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


</LinearLayout>