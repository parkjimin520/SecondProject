<?xml version="1.0" encoding="utf-8"?>
<com.sothree.slidinguppanel.SlidingUpPanelLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:sothree="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:gravity="bottom"
    app:umanoPanelHeight="20dp"
    app:umanoShadowHeight="4dp"
    app:umanoDragView="@id/dragView"
    android:id="@+id/slidingPanel">


    //메인화면
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include
            android:id="@+id/toolbar"
            layout="@layout/play_toolbar"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:layout_marginBottom="20dp"
            android:focusable="true"
            android:focusableInTouchMode="true">

            <EditText
                android:id="@+id/editText"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="7"
                android:imeOptions="actionSearch"
                android:inputType="text"
                android:maxLines="1"/>
            <Button
                android:id="@+id/previous"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:text="←" />
            <Button
                android:id="@+id/next"
                android:text="→"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:id="@+id/figureImage"
                android:layout_width="190dp"
                android:layout_height="190dp" />

            <TextView
                android:id="@+id/keyword"
                android:textSize="15dp"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:orientation="horizontal">
            <ToggleButton
                android:id="@+id/toggle"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:checked="true"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:orientation="horizontal"
                android:layout_marginLeft="10dp"
                android:layout_gravity="left">
                <ImageView
                    android:id="@+id/p1_button"
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/p1"/>
                <ImageView
                    android:id="@+id/p2_button"
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:text="참석자2"
                    android:src="@drawable/p2"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:orientation="horizontal"
                android:layout_marginLeft="80dp">
                <ImageButton
                    android:id="@+id/play_button"
                    android:text="재생"
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/play_icon"
                    android:adjustViewBounds="true"
                    android:background="#FFFFFF"
                    android:scaleType="fitXY"/>
                <ImageButton
                    android:layout_marginLeft="10dp"
                    android:id="@+id/pause_button"
                    android:text="일시정지"
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/pause_icon"
                    android:adjustViewBounds="true"
                    android:background="#FFFFFF"
                    android:scaleType="fitXY"/>
                <ImageButton
                    android:layout_marginLeft="10dp"
                    android:id="@+id/stop_button"
                    android:text="멈춤"
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/stop_icon"
                    android:adjustViewBounds="true"
                    android:background="#FFFFFF"
                    android:scaleType="fitXY"/>
            </LinearLayout>


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:orientation="horizontal">
            <ScrollView
                android:id="@+id/scrollView"
                android:layout_width="300dp"
                android:layout_height="match_parent"
                android:background="#DDD8D8">
                <TextView
                    android:id="@+id/textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </ScrollView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/timeText"
                    android:textSize="10dp"
                    android:text="00:00"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"/>

                <com.example.secondproject.CustomSeekBar
                    android:id="@+id/seekbar"
                    android:layout_width="340dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="150dp"
                    android:max="50"
                    android:progress="0"
                    android:progressDrawable="@android:color/transparent"
                    android:rotation="-270"
                    android:translationX="-145dp"
                    android:thumb="@drawable/seek_thumb_normal"
                    android:thumbOffset="12dp" />

                <TextView
                    android:id="@+id/length"
                    android:textSize="10dp"
                    android:text="00:00"
                    android:layout_gravity="center|bottom"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="155dp" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

    //SlidingUpPanel
    <LinearLayout
        android:id="@+id/dragView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="true"
        android:orientation="vertical"
        android:background="#D2DADD">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:gravity="center|top">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="↑SlidingUpPanel↑"/>
        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </androidx.recyclerview.widget.RecyclerView>

    </LinearLayout>

</com.sothree.slidinguppanel.SlidingUpPanelLayout>